<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings Card Styles -->
    <style name="SettingsCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/settings_card_elevation</item>
        <item name="cardCornerRadius">@dimen/settings_card_corner_radius</item>
        <item name="contentPadding">@dimen/settings_card_padding</item>
        <item name="android:layout_marginStart">@dimen/settings_card_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_card_margin</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="rippleColor">@color/settings_card_ripple</item>
    </style>

    <style name="SettingsCardTitleStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SettingsCardSummaryStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="PreferenceCategoryStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
    </style>

    <!-- Material Dialog Styles -->
    <style name="MaterialDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="MaterialDialog.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="MaterialDialog.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="MaterialDialog.Button.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <!-- Photo Source Dialog Preference style -->
    <style name="PhotoSourcesDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="buttonBarNegativeButtonStyle">@style/PhotoSourceDialogButton.Cancel</item>
        <item name="buttonBarPositiveButtonStyle">@style/PhotoSourceDialogButton.Confirm</item>
    </style>

    <style name="PreferenceStyle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="DialogPreference" parent="Preference.Material">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PhotoSourceDialogButton.Cancel" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/gray</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PhotoSourceDialogButton.Confirm" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/blue_light</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/gray</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Dialog preference items style -->
    <style name="DialogPreferenceItem" parent="PreferenceStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

</resources>