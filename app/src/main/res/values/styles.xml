<resources>
    <style name="PreferenceCategoryStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
    </style>

    <!-- Photo Source Dialog Preference style -->
    <style name="PhotoSourcesDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="buttonBarNegativeButtonStyle">@style/PhotoSourceDialogButton.Cancel</item>
        <item name="buttonBarPositiveButtonStyle">@style/PhotoSourceDialogButton.Confirm</item>
    </style>

    <style name="PreferenceStyle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="DialogPreference" parent="Preference.Material">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PhotoSourceDialogButton.Cancel" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/gray</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="PhotoSourceDialogButton.Confirm" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/gray</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>