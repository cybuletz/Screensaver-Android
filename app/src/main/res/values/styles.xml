<resources>
    <style name="PreferenceCategoryStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
    </style>

    <style name="PhotoSourcesDialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- Photo Source Dialog Preference style -->
    <style name="PreferenceStyle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="DialogPreference" parent="Preference.Material">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
    </style>

</resources>