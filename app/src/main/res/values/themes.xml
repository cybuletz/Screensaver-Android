<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Screensaver" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Enable Material Components features -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:dialogPreferredPadding">24dp</item>
        <item name="dialogPreferredPadding">24dp</item>
        <item name="android:listPreferredItemPaddingLeft">24dp</item>
        <item name="android:listPreferredItemPaddingRight">24dp</item>
        <item name="android:listPreferredItemHeightSmall">72dp</item>
    </style>

    <!-- Theme for your local photo selection activity -->
    <style name="Theme.Screensaver.PhotoSelection" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>


</resources>