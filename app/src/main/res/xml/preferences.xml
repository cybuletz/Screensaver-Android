<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.photostreamr.settings.MaterialBasicPreference
        style="@style/SettingsCardStyle"
        android:icon="@drawable/manage_photos"
        android:key="manage_photos"
        android:summary="@string/pref_photo_manager_summary"
        android:title="@string/manage_photos" />

    <com.photostreamr.settings.MaterialBasicPreference
        android:key="music_sources"
        android:title="@string/pref_music_sources_title"
        android:summary="@string/pref_music_sources_summary"
        android:icon="@drawable/music_sources"
        style="@style/SettingsCardStyle"/>

    <com.photostreamr.settings.MaterialBasicPreference
        android:key="common_settings"
        android:title="@string/pref_category_common"
        android:summary="@string/pref_common_summary"
        android:icon="@drawable/photoshow_settings"
        style="@style/SettingsCardStyle"/>

    <com.photostreamr.settings.MaterialBasicPreference
        android:key="widgets_settings"
        android:title="@string/widgets_settings_title"
        android:summary="@string/widgets_settings_summary"
        android:icon="@drawable/widgets"
        app:iconSpaceReserved="true" />

    <com.photostreamr.settings.MaterialBasicPreference
        android:key="display_settings"
        android:title="@string/pref_category_display"
        android:summary="@string/pref_display_summary"
        android:icon="@drawable/ic_display"
        style="@style/SettingsCardStyle"/>

    <com.photostreamr.settings.MaterialBasicPreference
        android:key="security_preferences"
        android:title="@string/pref_security_settings_title"
        android:summary="@string/pref_security_settings_summary"
        android:icon="@drawable/security_settings"
        style="@style/SettingsCardStyle"/>

    <com.photostreamr.settings.MaterialBasicPreference
        android:key="upgrade_to_pro"
        android:title="@string/upgrade_to_pro"
        android:summary="Enjoy premium features: music, widgets, and security controls"
        android:icon="@drawable/premium"
        style="@style/SettingsCardStyle"/>

    <!-- Add Feedback Section -->
    <PreferenceCategory
        android:title="Support &amp; Privacy"
        android:key="feedback_category">

        <Preference
            android:key="user_feedback"
            android:title="Send Feedback"
            android:summary="Share your thoughts and help us improve"
            android:icon="@drawable/ic_feedback"
            app:iconSpaceReserved="true" />

        <Preference
            android:key="rate_app"
            android:title="Rate on Play Store"
            android:summary="Love the app? Rate us on Google Play"
            android:icon="@drawable/ic_star"
            app:iconSpaceReserved="true" />

        <Preference
            android:key="help_preferences"
            android:title="Help &amp; Tutorial"
            android:summary="Show guidance about different settings"
            android:icon="@drawable/ic_help"
            app:iconSpaceReserved="true" />

        <Preference
            android:key="privacy_settings"
            android:title="@string/privacy_settings_title"
            android:summary="@string/privacy_settings_summary"
            android:icon="@drawable/ic_privacy"
            app:iconSpaceReserved="true" />

    </PreferenceCategory>

    <Preference
        android:layout="@layout/preference_bottom_spacing"
        android:key="bottom_spacing"/>

</PreferenceScreen>