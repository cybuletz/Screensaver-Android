<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Display Mode"
        android:key="display_mode">

        <ListPreference
            android:key="display_mode_selection"
            android:title="Select Display Mode"
            android:summary="Choose how photos are displayed"
            android:defaultValue="dream_service"
            android:entries="@array/display_mode_entries"
            android:entryValues="@array/display_mode_values"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="lock_screen_settings"
        android:title="Lock Screen Settings"
        android:dependency="display_mode_selection">

        <SwitchPreferenceCompat
            android:key="lock_screen_clock"
            android:title="Show Clock"
            android:summary="Display time on lock screen"
            android:defaultValue="true" />

        <SwitchPreferenceCompat
            android:key="lock_screen_date"
            android:summary="Display date on lock screen"
            android:title="Show Date"
            android:defaultValue="true" />

        <ListPreference
            android:key="lock_screen_transition"
            android:title="Photo Transition"
            android:summary="Choose how photos change"
            android:entries="@array/transition_effects"
            android:entryValues="@array/transition_effects_values"
            android:defaultValue="fade" />

        <SeekBarPreference
            android:key="lock_screen_interval"
            android:title="Photo Change Interval"
            android:summary="Time between photo changes"
            android:max="60"
            android:min="5"
            android:defaultValue="10" />

        <Preference
            android:key="preview_lock_screen"
            android:title="Preview Lock Screen"
            android:summary="See how your lock screen will look" />

        <Preference
            android:key="lock_screen_status"
            android:title="Lock Screen Status"
            android:selectable="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Photo Sources"
        android:key="photo_sources">

        <Preference
            android:key="select_photos"
            android:title="Select Photos"
            android:summary="Choose photos from your device" />

        <Preference
            android:key="google_photos"
            android:title="Google Photos"
            android:summary="Choose photos from your Google Photos account" />

        <SwitchPreferenceCompat
            android:key="random_order"
            android:title="Random Order"
            android:summary="Display photos in random order"
            android:defaultValue="true" />

        <ListPreference
            android:key="photo_scale"
            android:title="Photo Scale"
            android:summary="How photos should fit the screen"
            android:entries="@array/photo_scale_options"
            android:entryValues="@array/photo_scale_values"
            android:defaultValue="fill" />

        <MultiSelectListPreference
            android:key="photo_folders"
            android:title="Photo Folders"
            android:summary="Select folders to display photos from"
            android:entries="@array/empty_array"
            android:entryValues="@array/empty_array" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screensaver Settings"
        android:key="screensaver_settings">

        <SwitchPreferenceCompat
            android:key="screensaver_enabled"
            android:title="Enable Screensaver"
            android:summary="Activate photo slideshow as screensaver"
            android:defaultValue="true" />

        <SeekBarPreference
            android:key="screensaver_delay"
            android:title="Start Delay"
            android:summary="Time before screensaver starts"
            android:max="30"
            android:min="1"
            android:defaultValue="5" />

        <ListPreference
            android:key="transition_effect"
            android:title="Transition Effect"
            android:summary="Choose transition between photos"
            android:entries="@array/transition_effects"
            android:entryValues="@array/transition_effects_values"
            android:defaultValue="fade"/>

        <ListPreference
            android:key="refresh_interval"
            android:title="Photo Change Interval"
            android:summary="Time between photo changes"
            android:entries="@array/refresh_intervals"
            android:entryValues="@array/refresh_interval_values"
            android:defaultValue="300"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Display Settings"
        android:key="display_settings">

        <SwitchPreferenceCompat
            android:key="keep_screen_on"
            android:title="Keep Screen On"
            android:summary="Prevent screen from turning off"
            android:defaultValue="false"/>

        <SeekBarPreference
            android:key="brightness"
            android:title="Brightness"
            android:summary="Adjust display brightness"
            android:max="100"
            android:min="0"
            android:defaultValue="50"/>

        <ListPreference
            android:key="orientation"
            android:title="Screen Orientation"
            android:summary="Choose screen orientation"
            android:entries="@array/orientation_options"
            android:entryValues="@array/orientation_options_values"
            android:defaultValue="auto" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Schedule"
        android:key="schedule_settings">

        <SwitchPreferenceCompat
            android:key="schedule_enabled"
            android:title="Enable Schedule"
            android:summary="Set specific times for screensaver"
            android:defaultValue="false"/>

        <Preference
            android:key="start_time"
            android:title="Start Time"
            android:dependency="schedule_enabled"/>

        <Preference
            android:key="end_time"
            android:title="End Time"
            android:dependency="schedule_enabled"/>

        <MultiSelectListPreference
            android:key="active_days"
            android:title="Active Days"
            android:summary="Select days when schedule is active"
            android:entries="@array/days_of_week"
            android:entryValues="@array/days_of_week_values"
            android:dependency="schedule_enabled"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Debug Options"
        android:key="debug_settings">

        <Preference
            android:key="test_screensaver"
            android:title="Test Screensaver"
            android:summary="Start the screensaver manually"/>

        <SwitchPreferenceCompat
            android:key="debug_logging"
            android:title="Debug Logging"
            android:summary="Enable detailed logging"
            android:defaultValue="false" />

        <Preference
            android:key="view_logs"
            android:title="View Logs"
            android:summary="Display debug logs" />
    </PreferenceCategory>

</PreferenceScreen>