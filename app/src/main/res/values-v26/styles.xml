<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Add Base Theme for API 26 -->
    <style name="Base.V26.Theme.AppCompat.Light" parent="Base.V23.Theme.AppCompat.Light">
        <item name="colorError">@color/error_color</item>
    </style>

    <style name="Base.Theme.AppCompat.Light" parent="Base.V26.Theme.AppCompat.Light" />

    <style name="SettingsCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/settings_card_elevation</item>
        <item name="cardCornerRadius">@dimen/settings_card_corner_radius</item>
        <item name="contentPadding">@dimen/settings_card_padding</item>
        <item name="android:layout_marginStart">@dimen/settings_card_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_card_margin</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="rippleColor">@color/settings_card_ripple</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/card_stroke_light</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsCardTitleStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SettingsCardSummaryStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Material Dialog Styles -->
    <style name="MaterialDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Dialog</item>
    </style>

    <style name="MaterialDialog.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="MaterialDialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MaterialDialog.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_light</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PhotoSourcesDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialog.Button.Cancel</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialog.Button.Primary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Dialog</item>
    </style>

    <style name="PreferenceStyle">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MaterialDialog.Button.Cancel" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/gray</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PhotoSourceDialogButton.Confirm" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/blue_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/gray</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="DialogPreferenceItem" parent="PreferenceStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="iconSpaceReserved">true</item>
        <item name="android:iconSpaceReserved">true</item>
        <item name="iconSize">24dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

    <style name="MaterialDialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialog.Title</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialog.Button.Primary</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialog.Button.Cancel</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
    </style>

    <!-- Animation styles -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>