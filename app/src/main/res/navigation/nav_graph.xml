<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_photos">

    <fragment
        android:id="@+id/nav_photos"
        android:name="com.example.screensaver.MainFragment"
        android:label="Photos"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_nav_photos_to_nav_settings"
            app:destination="@id/nav_settings" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.screensaver.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_nav_settings_to_nav_photos"
            app:destination="@id/nav_photos" />
        <action
            android:id="@+id/action_nav_settings_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.screensaver.AlbumSelectionActivity"
        android:label="Albums"
        tools:layout="@layout/activity_album_selection">
        <action
            android:id="@+id/action_albumFragment_to_nav_settings"
            app:destination="@id/nav_settings" />
    </fragment>

</navigation>